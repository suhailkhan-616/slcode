<li id="comment-<%=comment._id%>"> 

    <small>
            <%=comment.user.name%>
    </small>
    <% if(locals.user
            &&
            locals.user.id==comment.user.id){%>
            <small>
                    <a class="delete-comment"
                            href="/comments/destroy/<%= comment.id %>">
                            <button>delete</button></a>
            </small>
            <%}%>
                    <p>
                            <%=comment.content%>
                    </p>

                    <small>
                        <% if (locals.user){ %>
                            <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                                    <%= comment.likes.length %> Likes
                            </a>
                        <% }else{ %>
                                <%= comment.likes.length %> Likes

                        <% } %>
                    </small>
                </li>
